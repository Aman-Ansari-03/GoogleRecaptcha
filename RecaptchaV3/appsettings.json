{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      },
      //if you will not use this your log won't come in the console
      {
        "Name": "Console"
      }
    ]
  },

  "GoogleRecaptcha": {
    "VefiyAPIAddress": "https://www.google.com/recaptcha/api/siteverify",
    "Sitekey": "YOUR_SITE_KEY_OF_GOOLE_RECAPTCHA",
    "Secretkey": "YOUR_SECRETKEY_OF_GOOLE_RECAPTCHA"
  },
  "RecaptchaThreshold": "0.5",
  "AllowedHosts": "*"
}
